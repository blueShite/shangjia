        <activity android:name=".Login.LoginActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Splash.SplashActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Tab.TabActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".FootList.FootDetail.FootDetailActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Order.OrderDetail.OrderDetailActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Order.ScanBarCode.ScanBarCodeActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".My.MySub.MySetActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Order.OrderDetail.ShowBarCode.ShowBarcodeActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".My.MySub.MyAboutActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".My.MySub.SetPasswordActivity"
                  android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>