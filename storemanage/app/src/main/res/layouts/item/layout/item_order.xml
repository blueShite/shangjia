<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@color/ColorBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/appwhite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <Button
            android:id="@+id/button_order_sucess"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/btn_hight_shape"
            android:text="制作完成"
            android:textColor="@color/appwhite"
            android:textSize="@dimen/smallText"
            app:layout_constraintBottom_toTopOf="@+id/text_order_phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_order_name"/>

        <TextView
            android:id="@+id/text_order_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/ColorBlcak"
            android:textSize="@dimen/smallText"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text_order_footName"
            app:layout_constraintLeft_toRightOf="@+id/image_order_header"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
            android:id="@+id/text_order_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="TextView"
            android:textColor="@color/ColorBlcak"
            android:textSize="@dimen/smallText"
            app:layout_constraintLeft_toRightOf="@+id/image_order_header"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text_order_phone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/text_order_footName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="@color/ColorBlcak"
            android:textSize="@dimen/smallText"
            app:layout_constraintLeft_toRightOf="@+id/image_order_header"
            app:layout_constraintTop_toBottomOf="@+id/text_order_name"
            app:layout_constraintRight_toLeftOf="@+id/button_order_sucess"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/text_order_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textColor="@color/ColorBlcak"
            android:textSize="@dimen/mainText"
            app:layout_constraintLeft_toRightOf="@+id/image_order_header"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_order_header"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/tab_info_active"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>